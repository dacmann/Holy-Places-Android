<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Regular -->
    <font
        android:fontStyle="normal"
        android:fontWeight="350"
        android:font="@font/libre_baskerville_regular"
        app:fontStyle="normal"
        app:fontWeight="400"
        app:font="@font/libre_baskerville_regular" />

    <!-- Bold -->
    <font
        android:fontStyle="normal"
        android:fontWeight="700"
        android:font="@font/libre_baskerville_bold"
        app:fontStyle="normal"
        app:fontWeight="700"
        app:font="@font/libre_baskerville_bold" />

    <!-- Italic -->
    <font
        android:fontStyle="italic"
        android:fontWeight="350"
        android:font="@font/libre_baskerville_italic"
        app:fontStyle="italic"
        app:fontWeight="400"
        app:font="@font/libre_baskerville_italic" />
</font-family>