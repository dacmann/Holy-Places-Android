<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="?android:attr/colorBackground">

    <!-- Close button -->
    <ImageButton
        android:id="@+id/button_close_info_sheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:contentDescription="@string/cd_close_sheet"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="?attr/colorControlNormal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Guideline to divide screen for two columns -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <!-- Left Column -->
    <LinearLayout
        android:id="@+id/left_column_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/button_close_info_sheet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline_vertical_center"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/app_logo_info"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:src="@drawable/morningstarmoroni"
            android:contentDescription="@string/cd_app_logo"
            android:scaleType="fitCenter"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/greetings_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/info_greetings_text"
            android:gravity="center"
            android:textAppearance="?attr/textAppearanceBody2" />

        <Button
            android:id="@+id/faq_button"
            style="?attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/info_faq_button" />
    </LinearLayout>

    <!-- Right Column -->
    <LinearLayout
        android:id="@+id/right_column_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/button_close_info_sheet"
        app:layout_constraintStart_toEndOf="@id/guideline_vertical_center"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profile_pic_info"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/profile_pic"
            android:contentDescription="@string/cd_profile_picture"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.App.CircleImageView"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/contact_intro_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="@string/info_contact_intro"
            android:textAppearance="?attr/textAppearanceBody2" />

        <Button
            android:id="@+id/email_link_button"
            style="?attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/info_contact_me_email" />

    </LinearLayout>

    <!-- Horizontal separator below columns -->
    <View
        android:id="@+id/column_separator_view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="?attr/dividerHorizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/left_column_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="NotSibling" />
    <!-- tools:ignore is because left_column_layout and right_column_layout might have different heights.
         A better approach would be to ensure both columns are wrapped in a container,
         or constrain this separator to the bottom of the taller of the two columns if that's an issue.
         For now, constraining to left_column_layout (or right_column_layout) will work if their heights are similar
         or if you explicitly set a minimum height for them.
         A more robust way if heights differ significantly:
         app:layout_constraintTop_toBottomOf="@+id/barrier_columns_bottom"
         and add a Barrier:
         <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier_columns_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="left_column_layout,right_column_layout" />
    -->


    <!-- Logo Explanation Section (Below the two columns) -->
    <TextView
        android:id="@+id/logo_explanation_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/info_logo_explanation"
        android:gravity="center"
        android:textAppearance="?attr/textAppearanceBody2"
        app:layout_constraintTop_toBottomOf="@id/column_separator_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/article_link_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="@string/info_article_link_title"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="?attr/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/logo_explanation_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Version Info Text -->
    <TextView
        android:id="@+id/version_info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        tools:text="Version 1.0.0 | Data 20231120"
        android:textAppearance="?attr/textAppearanceCaption"
        app:layout_constraintTop_toBottomOf="@id/article_link_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
