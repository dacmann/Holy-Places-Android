<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HolyPlacesOfTheLord" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Status bar color for dark mode -->
        <item name="android:statusBarColor">@color/app_bar_background_color</item> <!-- Match app bar (dark version) -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item> <!-- Dark status bar icons are light -->

        <!-- Theme for the AppBar itself to ensure light text/icons on dark background -->
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="toolbarNavigationButtonStyle">@style/Widget.AppCompat.Toolbar.Button.Navigation</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Dark</item>

    </style>
</resources>